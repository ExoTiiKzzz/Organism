{% extends '/base.html.twig' %}

{% block title %}New students{% endblock %}

{% block content %}
    <form method="post" enctype="multipart/form-data" action="/students/provide">

        <div class="form-group">
            <label for="promotion">Promotion</label>
            <select name="promotion" id="promotion" class="form-select" required>
                {% for promotion in promotions %}
                    <option value="{{ promotion._id }}">
                        {{ promotion.name }} ({{ promotion.degree.name }} - du {{ promotion.start|date('d/m/Y') }} au {{ promotion.end|date('d/m/Y') }})
                    </option>
                {% endfor %}
            </select>
        </div>

        <div class="form-group">
            <label for="csv">CSV</label>
            <input class="form-control" type="file" name="csv" id="csv" required accept=".csv">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}
