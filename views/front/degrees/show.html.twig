{% extends 'base.html.twig' %}

{% block title %}
    {% if degree is defined %}
        Edit {{ degree.name }}
    {% else %}
        Create a new degree
    {% endif %}
{% endblock %}

{% block content %}
    {% set action = 'new' %}
    {% if degree is defined %}
        {% set action = degree._id %}
    {% endif %}
    <form action="/degrees/{{ action }}" method="post">
        <div class="form-group">
            <label for="name">Degree name</label>
            <input type="text" name="name" id="name" class="form-control" value="{{ degree.name }}">
        </div>

        <div class="form-group">
            <label for="description">Degree description</label>
            <textarea name="description" id="description" class="form-control">{{ degree.description }}</textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>

    </form>
{% endblock %}